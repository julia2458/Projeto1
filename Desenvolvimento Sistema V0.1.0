#função verificar lucro
def verificarLucro():
    if rentabilidade > 20: 
        print("LUCRO ALTO")
    elif rentabilidade > 10 and rentabilidade <= 20: 
        print("LUCRO MÉDIO")
    elif rentabilidade > 0 and rentabilidade <= 10:
        print("LUCRO BAIXO")
    elif rentabilidade < 0: 
        print("PREJUÍZO")
    else: 
        print("EQUILIBRIO")
        
#função tabela       
def criarTabela():
    print("-"*100)
    print("\t\t\tINFORMAÇÕES DO PRODUTO\t\t\t")
    print("-"*100)
    print("CÓDIGO\t\t\t%i\t\t\t" % (cod_prod))
    print("NOME\t\t\t%s\t\t\t" % (nome_prod))
    print("DESCRIÇÃO\t\t%s\t\t\t" % (descr_prod))
    print("-"*100)
    print("DESCRIÇÃO\t\t\tVALOR\t\t\tPORCENTAGEM")
    print("-"*100)
    print("PREÇO DE VENDA\t\t\t%f\t\t%f" % (preco_venda,por100_precoVenda))
    print("Custo de Aquisição\t\t%f\t\t%f" % (custo_prod, por100_custoProd))
    print("RECEITA BRUTA\t\t\t%f\t\t%f" % (rec_bruta, por100_recBruta))
    print("Custo Fixo/Administrativo\t%f\t\t%f" % (valor_cf, cf_prod))
    print("Comissão de Vendas\t\t%f\t\t%f" % (valor_comissao, comissao_venda))
    print("Impostos\t\t\t%f\t\t%f" % (valor_imposto, impostos))
    print("OUTROS CUSTOS\t\t\t%f\t\t%f" % (outros_custos, por100_outros))
    print("RENTABILIDADE\t\t\t%f\t\t%f" % (valor_rentabilidade, rentabilidade))
    print("-"*100)
    
try: 
    print("")
    print("")
    print("-"*100)
    print("\t\t\t\tCADASTRO DE PRODUTO\t\t\t\t")
    print("-"*100)
    #entrada de dados
    cod_prod = int(input("CÓDIGO DO PRODUTO: "))
    if cod_prod <= 0: 
        print("Inválido. O código do produto deve ser maior que zero.")
    else: 
        nome_prod = input("NOME DO PRODUTO: ")
        descr_prod = input("DESCRIÇÃO DO PRODUTO: ")
        custo_prod = float(input("CUSTO DO PRODUTO: "))
        if custo_prod <= 0: 
            print("Inváldo. O valor do custo do produto deve ser maior que zero.")
        else:
            cf_prod = float(input("CUSTO FIXO/ADMINISTRATIVO(%): "))
            if cf_prod <= 0:
                print("Inválido. A porcentagem referente ao custo fixo deve ser maior que zero.")
            else:
                comissao_venda = float(input("COMISSÃO DE VENDAS(%): "))
                if comissao_venda < 0: 
                    print("Inválido. A  porcentagem referente a comissão de venda deve conter um valor positivo ou nulo.")
                else: 
                    impostos = float(input("IMPOSTOS(%): "))
                    if impostos <= 0: 
                        print("Inválido. A porcentagem referenta ao imposto deve ser maior que zero.")
                    else:
                        rentabilidade = float(input("LUCRO PRETENDIDO(%): "))
                        
                        #cálculo preço de venda
                        preco_venda = custo_prod / (1 - ((cf_prod + comissao_venda + impostos + rentabilidade)/100))
                        
                        #Cálculos para exibição
                        rec_bruta = preco_venda - custo_prod
                        outros_custos = cf_prod + comissao_venda + impostos
                        #percentual sobre os valores 
                        por100_precoVenda = (100 * preco_venda)/preco_venda
                        por100_custoProd = (100 * custo_prod)/preco_venda
                        por100_recBruta = (100 * rec_bruta)/preco_venda
                        por100_outros = (100 * outros_custos )/preco_venda
                        valor_cf = (preco_venda * cf_prod)/100
                        valor_rentabilidade = (preco_venda * rentabilidade)/100
                        valor_comissao = (preco_venda * comissao_venda)/100
                        valor_imposto = (preco_venda * impostos)/100
                        
                        #exibindo tabela de dados
                        
                        print("-"*100)
                        print("")
                        print("-"*100)
                        criarTabela()
                        verificarLucro()
                        
except ValueError: 
    print("ERRO! O valor insirido não corresponde com o campo.")
    print("ERRO! O valor insirido não corresponde com o campo.")
